<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cardLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/chat_contenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:gravity="start"
                        android:text="CNI:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="6pt" />
                    <TextView
                        android:id="@+id/lbl_CNI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:gravity="start"
                        android:text="00 00 00 00 00"
                        android:textColor="@color/colorPrimary"
                        android:textSize="6pt" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lbl_nom_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#333"
                    android:text="Nom et prenom du client"
                    android:textSize="8pt" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lbl_email_client"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email du client"
                        android:layout_marginLeft="5dp"
                        android:textSize="6pt" />
                    <TextView
                        android:id="@+id/lbl_tel_client"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00 00 00 00"
                        android:gravity="end"
                        android:textSize="6pt" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
